#import <UIKit/UIKit.h>

@interface UIView (FontAndColor)
/**
 修改字体颜色和大小
 
 @param color 颜色
 @param font 大小
 @param bold 粗细
 */
- (void)setLableColor:(NSString *)color font:(NSInteger)font bold:(CGFloat)bold;

/**
 计算一行文字的宽高

 @param font 字体
 @param text 文本
 @param maxSize 最大范围
 @return 该行文字在指定的范围内的长度和高度
 */
-(CGSize)sizeWithFont:(UIFont *)font AndText:(NSString *)text AndMaxSize:(CGSize)maxSize;
@end
